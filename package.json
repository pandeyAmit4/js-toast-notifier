{
	"name": "js-toast-notifier",
	"version": "1.0.13",
	"description": "ToastfierJS is a lightweight JavaScript library for customizable toast notifications, supporting dynamic positioning, themes, and notification types with iconsâ€”ideal for clean, dependency-free alerts in any web app.",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "./dist/index.d.ts",
	"browser": "dist/index.umd.js",
	"unpkg": "dist/index.umd.js",
	"scripts": {
		"prebuild": "sass src/styles:dist --no-source-map --style=compressed --load-path=node_modules",
		"build": "microbundle --config --no-sourcemap --globals jsToastNotifier=ToastNotifier --define process.env.NODE_ENV=production",
		"dev": "microbundle watch --config --no-sourcemap --globals jsToastNotifier=ToastNotifier",
		"test": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.cjs"
		},
		"./dist/toast.css": {
			"import": "./dist/index.css",
			"require": "./dist/index.css"
		},
		"./toast.scss": {
			"import": "./dist/toast.scss",
			"require": "./dist/toast.scss"
		}
	},
	"keywords": [
		"toast",
		"notification",
		"vanilla-js",
		"droplet",
		"javascript",
		"toast-notifier",
		"toast-notifications",
		"alert",
		"frontend",
		"user-interface",
		"UI",
		"web-development",
		"lightweight",
		"dependency-free",
		"popup",
		"dynamic-positioning"
	],
	"author": {
		"name": "Amit Pandey",
		"email": "pandey.amitx@gmail.com"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/pandeyAmit4/js-toast-notifier.git"
	},
	"homepage": "https://pandeyamit4.github.io/js-toast-notifier",
	"bugs": {
		"url": "https://github.com/pandeyAmit4/js-toast-notifier/issues"
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE"
	],
	"devDependencies": {
		"core-js": "^3.39.0",
		"cssnano": "^7.0.6",
		"microbundle": "^0.15.1",
		"postcss-import": "^16.1.0",
		"sass": "^1.68.0",
		"vitest": "^0.34.6"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"> 0.5%"
	]
}
